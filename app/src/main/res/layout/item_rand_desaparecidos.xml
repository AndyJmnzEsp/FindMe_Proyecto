<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="190dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="40dp"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/featured_bg">

    <RelativeLayout
        android:id="@+id/img_des"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:elevation="5dp"
        android:background="@drawable/featured_bg">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/item_desaparecido_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:background="@color/purple_200"
            app:srcCompat="@drawable/img_face"
            app:shapeAppearanceOverlay="@style/roundimageview"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/img_des">

        <TextView
            android:id="@+id/item_desaparecido_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_toStartOf="@id/item_desaparecido_edad"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Nombre"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_desaparecido_edad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="8dp"
            android:text="18"
            android:textColor="#BEAEDE" />

        <TextView
            android:id="@+id/item_desaparecido_ciudad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_desaparecido_text"
            android:text="Ciudad"
            android:layout_marginStart="8dp"
            android:textColor="#BEAEDE"/>

    </RelativeLayout>


</RelativeLayout>