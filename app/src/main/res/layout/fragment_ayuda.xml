<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Ayuda.AyudaFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="409dp"
        android:layout_marginBottom="452dp"
        android:src="@drawable/img_iniciar_sesion1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="418dp"
        android:layout_height="627dp"
        android:background="@drawable/custom_view_ayuda"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="116dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="Ayuda"
            android:textColor="#7246C5"
            android:textSize="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.045" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/telefonos"
            android:layout_width="338dp"
            android:layout_height="139dp"
            android:background="@drawable/custom_view"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintVertical_bias="0.107">

            <TextView
                android:id="@+id/num_pol"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:layout_marginTop="16dp"
                android:text="Policia: 911"
                android:textColor="#545455"
                android:textSize="15dp"
                app:layout_constraintBottom_toTopOf="@+id/num_rp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.582"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.147" />

            <TextView
                android:id="@+id/num_mp"
                android:layout_width="229dp"
                android:layout_height="25dp"
                android:text="Ministerio PÃºblico: 33 3738 6000"
                android:textColor="#545455"
                android:textSize="15dp"
                app:layout_constraintBottom_toTopOf="@+id/num_rp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.743"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/num_pol" />

            <TextView
                android:id="@+id/num_rp"
                android:layout_width="229dp"
                android:layout_height="25dp"
                android:layout_marginBottom="16dp"
                android:text="Reportar Personas: 800-028-77-83"
                android:textColor="#545455"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.743"
                app:layout_constraintStart_toStartOf="parent" />

            <!--- Los telefonos de emergencia-->


        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="-20dp"
            android:layout_marginTop="-20dp"
            android:background="@drawable/img_button_llamada"
            app:layout_constraintStart_toStartOf="@+id/telefonos"
            app:layout_constraintTop_toTopOf="@+id/telefonos"
            tools:layout_editor_absoluteX="37dp"
            tools:layout_editor_absoluteY="50dp" />

        <LinearLayout
            android:layout_width="413dp"
            android:layout_height="223dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/telefonos"
            app:layout_constraintVertical_bias="0.208" >

            <!---Agregar las cardview de los psicologos-->
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>